<h2>Edit Trip</h2>

<main>
<%= form_with model: @trip do |f| %>


  <%= f.label :date %>
  <%= f.date_select :date %>

  <%= f.label :cost %>
  <%= f.number_field :cost %>

  <%= f.label :rating %>
  <%= f.select :rating, (1..5) %>

  <%= f.submit action_name, class: "edit-trip__submit-btn" %>
  <% end %>
</main>
